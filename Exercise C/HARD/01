//viet ham dao nguoc ki tu tung tu trong mot cau
#include <stdio.h>
#include <string.h>
int length (char a[])
{
	int i = 0;
	while (a[i] != NULL)
	{
		++i;
	}
	return i-1;
}
void reverse(char a[])
{
	int n = length(a);
	char *tmp = new char[n-1];
	for (int i=0; i<n;i++)
	{
		tmp[i]=a[n-1-i];
    }
    printf("Chuoi sau khi dao nguoc la:");
	for (int i=n-1;i>=0;i--)
	{
		printf("%c",a[i]);
	}
}
int main()
{
	char a[100];
	printf("Nhap chuoi a: ");
	fgets(a,100,stdin);
	reverse(a);
}
