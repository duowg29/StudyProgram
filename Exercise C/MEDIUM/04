//Viet ham tru gia tri cua 2 mang so
#include <stdio.h>
void minus()
{
	int num;
	printf("Nhap vao so phan tu cua mang: ");
	scanf("%d", &num);
	if(n<0)
	{
		printf("Vui long nhap lai so duong: ");
		scanf("%d", &num);
	}
	int a[num];
	int b[num];
	int c[num];
	printf("Nhap vao mang a:\n");
    for (int i = 0; i < num; i++) {
        printf("Phan tu thu %d = ", i);
        scanf("%d", &a[i]);
    }
    printf("Nhap vao mang b:\n");
    for (int i = 0; i < num; i++) {
        printf("Phan tu thu %d = ", i);
        scanf("%d", &b[i]);
    }
    for (int i = 0; i < n; i++) 
	{
		c[i]=a[i]-b[i];
    }   
	printf("Mang c sau khi tru la: ");
    for (int i = 0; i < num; i++) {
        printf(" %d", c[i]);
    }
}
int main()
{
    int num;
    minus();
}
