//viet ham dem so luong so chan trong 1 mang
#include <stdio.h>
void even(int num, int count)
{
	count=0;
	int a[100];
	printf ("Nhap so luong phan tu: ");
	scanf ("%d", &num);
	if(num<0)
	{ 
	   printf("Vui long nhap lai so duong: ");
	   scanf ("%d", &num);
	}
	for (int i=0;i<num;i++)
	{
		printf ("Nhap phan tu thu %d: ",i);
		scanf ("%d", &a[i]);
		if (a[i]%2==0)
		{
			count++;
		}
	}
	printf ("so luong so chan la: %d", count);
}
int main()
{
	int a[100];
	int num,count;
	even(num,count);
}
